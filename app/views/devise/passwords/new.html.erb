<%= render 'layouts/flash' %>

<div class="container">

  <div class="row">

      <div class="col-md-6 col-md-offset-3">

          <h1 class="page-title"><%= t('.change_your_password') %></h1>

      </div>

  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { role: 'form', method: :post }) do |f| %>

  <div class="row">

    <div class="col-md-6 col-md-offset-3 text-center">

        <h2><%= t('.did_you_forget') %></h2>

        <p><%= t('.dont_worry') %></p>

    </div>

  </div>

  <fieldset>

    <div class="row">

      <div class="col-md-6 col-md-offset-3 text-center">

        <div class="form-group">
          <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: t('general.email_placeholder'), class: 'form-control inline-label' %>
        </div>

      </div>

    </div>

    <div class="row">

      <div class="col-md-6 col-md-offset-3 text-center">

        <div class="form-group">
          <%= f.submit t('.reset'), class: 'btn btn-lg btn-primary' %>
        </div>

      </div>

    </div>

  </fieldset>

  <% end %>

  <div class="row">

    <div class="col-md-6 col-md-offset-3">

      <div class="help-block help-block-right">
        <%= render "devise/shared/links" %>
      </div>

    </div>

  </div>

</div>

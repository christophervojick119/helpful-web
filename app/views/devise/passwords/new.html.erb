<%= render 'layouts/flash' %>

<div class="container">

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1 class="page-title"><%= t('.forgot_your_password') %></h1>
      <div class="text-center">
        <h1><%= t('.no_worry') %></h1>
        <p><%= t('.youre_covered') %></p>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
        <%= devise_error_messages! %>

        <fieldset>

          <div class="form-group">
            <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: t('general.email_placeholder'), class: 'form-control inline-label' %>
          </div>

          <div class="form-group text-center">
            <%= f.submit t('.reset'), class: 'btn btn-lg btn-primary' %>
          </div>

        </fieldset>
      <% end %>

    </div>
  </div>
</div>

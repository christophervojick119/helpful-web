<%= render 'shared/navbar' %>

<%= render 'layouts/flash' %>

<div class="container">

  <!-- TODO locale is missing -->
  <h1 class="page-title">Sign In</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: 'form' }) do |f| %>

    <h2><%= t('.welcome_back') %></h2>

    <!-- TODO locale is missing -->
    <p>We just need some quick details from you and then you can get right back to work.</p>

    <fieldset>

      <div class="row">

        <div class="col-md-12">

          <div class="form-group">
            <%= f.label :email, t('general.email'), class: 'control-label' %>
            <%= f.email_field :email, autofocus: true, placeholder: t('general.email_placeholder'), class: 'form-control' %>
          </div>

        </div>

      </div>

      <div class="row">

        <div class="col-md-12">

          <div class="form-group">
            <%= f.label :password, t('general.password'), class: 'control-label' %>
            <%= f.password_field :password, placeholder: t('.password_placeholder'), class: 'form-control' %>
          </div>

        </div>

      </div>

      <div class="row">

        <div class="col-md-12">

          <div class="help-block">
            <%= link_to t('general.forgot_password'), new_password_path(resource_name), class: 'pull-right' %>
          </div>

          <div class="checkbox">
            <%= f.label :remember_me do %>
              <%= f.check_box :remember_me, checked: 'checked' %>
              <%= t('.remember_me') %>
            <% end %>
          </div>

        </div>

      </div>

      <div class="row">

        <div class="col-md-12">

          <div class="form-group">
            <%= f.submit t('devise.general.sign_in'), class: 'btn btn-lg btn-primary' %>
          </div>

        </div>

      </div>

    </fieldset>

  <% end %>

</div>
